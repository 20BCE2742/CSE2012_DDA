#include <iostream>
using namespace std;
int main() {
  int n;
  cout<<"enter the number of elements ";
  cin>>n;
  int arr[n];
  cout<<"enter the elements ";
  for(int i=0;i<n;i++)
  {
    cin>>arr[i];
  }
  for (int step = 0; step < (n-1); ++step) 
  {
    for (int i = 0; i < n - (step-1); ++i)
    {
      if (arr[i] > arr[i + 1]) 
      {        
        int temp = arr[i];
        arr[i] = arr[i + 1];
        arr[i + 1] = temp;
      }
    }
  }
  int x;
  cout<<"enter the index you want to find ";
  cin>>x;
  if(x>=n)
  {
    cout<<"index out of bounds(INVALID INDEX)";
  }
  else
  cout<<arr[x-1];
}
